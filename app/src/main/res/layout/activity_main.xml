<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.suntiago.filter.FilterView
        android:id="@+id/province_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoSquare="true"
        app:gravityCentre="true"
        app:contentTextBackgroundRes="@drawable/device_province_selector"
        app:contentTextMargin="2dp"
        app:contentTextSize="21dp"/>

    <TextView
        android:id="@+id/province_filter_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.suntiago.filter.FilterView
        android:id="@+id/promote_search1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentTextMargin="2dp"
        app:contentTextSize="21dp"/>
    <com.suntiago.filter.FilterView
        android:id="@+id/promote_search2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentTextMargin="2dp"
        app:contentTextSize="21dp"/>
    <com.suntiago.filter.FilterView
        android:id="@+id/promote_search3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentTextMargin="2dp"
        app:contentTextSize="21dp"/>
    <TextView
        android:id="@+id/promote_search_chose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
